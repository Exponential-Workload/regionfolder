{
  "name": "regionfolding",
  "displayName": "#region folding",
  "version": "1.1.0",
  "description": "Provides folding for text wrapped with #region comments in VS Code.",
  "homepage": "https://raw.githubusercontent.com/Exponential-Workload/regionfolder/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Exponential-Workload/regionfolder"
  },
  "main": "./out/extension",
  "exports": {
    ".": {
      "require": "./out/extension",
      "default": "./out/extension"
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "esbuild src/extension.ts --bundle --minify --packages=external --platform=node --format=cjs --sourcemap --outfile=out/extension.js",
    "watch": "pnpm build --watch",
    "test": "concurrently \"npm:build\" \"npm:lint\" \"tsc --noEmit\"",
    "lint": "prettier -c src",
    "package": "vsce package -o regionfolder.vsix",
    "start": "pnpm package && code --install-extension regionfolder.vsix"
  },
  "devDependencies": {
    "@3xpo/pkgmetatool": "^0.1.8",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.14.4",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/vsce": "^2.27.0",
    "esbuild": "^0.21.5",
    "glob": "^10.4.1",
    "mocha": "^10.4.0",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "vscode": "^1.76.0"
  },
  "publisher": "3xpo",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "imgs/Icon.png",
  "contributes": {
    "commands": [
      {
        "command": "regionfolder.collapseAllRegions",
        "title": "Region folding: Collapse all #regions."
      },
      {
        "command": "regionfolder.collapseDefault",
        "title": "Region folding: Collapse default #regions."
      },
      {
        "command": "regionfolder.deleteRegion",
        "title": "Region folding: Delete current #region tags and contents"
      },
      {
        "command": "regionfolder.removeCurrentRegionTags",
        "title": "Region folding: Delete current #region tags"
      },
      {
        "command": "regionfolder.wrapWithRegion",
        "title": "Region folding: Wrap selection with #region tag."
      },
      {
        "command": "regionfolder.wrapWithRegionAndComment",
        "title": "Region folding: Wrap with #region tag and comment."
      },
      {
        "command": "regionfolder.selectCurrentRegion",
        "title": "Region folding: Select current #region."
      },
      {
        "command": "regionfolder.selectCurrentRegionContents",
        "title": "Region folding: Select current #region contents."
      }
    ],
    "keybindings": [
      {
        "command": "regionfolder.wrapWithRegion",
        "key": "ctrl+m ctrl+r",
        "when": "editorTextFocus"
      },
      {
        "command": "regionfolder.collapseDefault",
        "key": "ctrl+shift+m ctrl+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Region folding: maptz region folding configuration",
      "type": "object",
      "properties": {
        "3xpo.regionfolder": {
          "type": "object",
          "description": "Settings used for custom folding.",
          "default": {}
        }
      }
    },
    "configurationDefaults": {}
  }
}
