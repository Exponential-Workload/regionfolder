{
  "name": "regionfolding",
  "displayName": "#region folding",
  "version": "1.2.0",
  "description": "Provides folding for text wrapped with #region comments in VSCode.",
  "homepage": "https://raw.githubusercontent.com/Exponential-Workload/regionfolder/master/README.md",
  "repository": {
    "type": "git",
    "url": "https://github.com/Exponential-Workload/regionfolder"
  },
  "main": "./dist/extension",
  "browser": "./dist/web/extension",
  "exports": {
    ".": {
      "require": "./dist/extension",
      "browser": "./dist/web/extension",
      "default": "./dist/extension"
    }
  },
  "scripts": {
    "vscode:prepublish": "concurrently \"npm:build\" \"npm:lint\"",
    "esbuild:base": "esbuild src/extension.ts --bundle --minify --external:vscode --format=cjs --sourcemap",
    "esbuild:web": "pnpm run esbuild:base --outfile=dist/web/extension.js --platform=browser",
    "esbuild:desktop": "pnpm run esbuild:base --outfile=dist/extension.js --platform=node",
    "build": "pnpm run check-types && npm-run-all -p build:*",
    "build:web": "pnpm run esbuild:web",
    "build:desktop": "pnpm run esbuild:desktop",
    "watch:web": "npm-run-all -p watch-web:*",
    "watch:web:esbuild": "node esbuild.js --watch",
    "watch:web:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "lint": "prettier -c src",
    "pretest": "pnpm run build",
    "pretest:web": "pnpm run build",
    "pretest:desktop": "pnpm run build",
    "test:web": "pnpm run run-in-browser",
    "test:desktop": "concurrently \"npm:build\" \"npm:lint\" \"tsc --noEmit\"",
    "check-types": "tsc --noEmit",
    "run-in-browser": "vscode-test-web --browserType=firefox --extensionDevelopmentPath=. .",
    "package": "vsce package -o out/regionfolder.vsix",
    "start": "pnpm package && code --install-extension out/regionfolder.vsix"
  },
  "devDependencies": {
    "@3xpo/pkgmetatool": "^0.1.8",
    "@types/assert": "^1.5.10",
    "@types/mocha": "^10.0.6",
    "@types/vscode": "^1.90.0",
    "@vscode/test-electron": "^2.4.0",
    "@vscode/test-web": "^0.0.54",
    "assert": "^2.1.0",
    "esbuild": "^0.20.2",
    "glob": "^10.3.12",
    "mocha": "^10.4.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "typescript": "^5.4.5"
  },
  "engines": {
    "vscode": "^1.90.0"
  },
  "publisher": "3xpo",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "icon": "imgs/Icon.png",
  "contributes": {
    "commands": [
      {
        "command": "regionfolder.collapseAllRegions",
        "title": "Region folding: Collapse all #regions."
      },
      {
        "command": "regionfolder.collapseDefault",
        "title": "Region folding: Collapse default #regions."
      },
      {
        "command": "regionfolder.deleteRegion",
        "title": "Region folding: Delete current #region tags and contents"
      },
      {
        "command": "regionfolder.removeCurrentRegionTags",
        "title": "Region folding: Delete current #region tags"
      },
      {
        "command": "regionfolder.wrapWithRegion",
        "title": "Region folding: Wrap selection with #region tag."
      },
      {
        "command": "regionfolder.wrapWithRegionAndComment",
        "title": "Region folding: Wrap with #region tag and comment."
      },
      {
        "command": "regionfolder.selectCurrentRegion",
        "title": "Region folding: Select current #region."
      },
      {
        "command": "regionfolder.selectCurrentRegionContents",
        "title": "Region folding: Select current #region contents."
      }
    ],
    "keybindings": [
      {
        "command": "regionfolder.wrapWithRegion",
        "key": "ctrl+m ctrl+r",
        "when": "editorTextFocus"
      },
      {
        "command": "regionfolder.collapseDefault",
        "key": "ctrl+shift+m ctrl+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "Region folding: maptz region folding configuration",
      "type": "object",
      "properties": {
        "3xpo.regionfolder": {
          "type": "object",
          "description": "Settings used for custom folding.",
          "default": {}
        }
      }
    },
    "configurationDefaults": {}
  },
  "pnpm": {
    "overrides": {
      "@playwright/browser-chromium": "npm:@playwright/browser-firefox@^1.44.1"
    }
  }
}
